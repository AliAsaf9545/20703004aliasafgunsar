@model List<MVC_StokOtomasyonProje.Models.Entity.Satislar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Satış Listesi</h2>

<table class="table table-bordered table-striped">
    
    <thead style="background-color:aliceblue">
        <tr>
            <th>ID</th>
            <th>Kullanıcı Adı Soyadı</th>
            <th>Ürün Adı</th>
            <th>Barkod No</th>
            <th>Birim Fiyatı</th>
            <th>Miktarı</th>
            <th>Toplam Fiyatı</th>
            <th>KDV</th>
            <th>Birimi</th>
            <th>Tarih</th>
            <th>Saat</th>
        </tr>
    </thead>


    @foreach (var item in Model)
    {
        <tr>
            <th>@Html.DisplayFor(x => item.ID)</th>
            <td>@Html.DisplayFor(x => item.Kullanicilar.AdiSoyadi)</td>
            <td>@Html.DisplayFor(x => item.Urunler.UrunAdi)</td>
            <td>@Html.DisplayFor(x => item.BarkodNo)</td>
            <td>@Html.DisplayFor(x => item.BirimFiyati)</td>
            <td>@Html.DisplayFor(x => item.Miktari)</td>
            <td>@Html.DisplayFor(x => item.ToplamFiyati)</td>
            <td>% @Html.DisplayFor(x => item.KDV)</td>
            <td>@Html.DisplayFor(x => item.Urunler.Birimler.Birim)</td>
            <td>@item.Tarih.ToString("dd.MM.yyyy")</td>
            <td>@item.Saat.ToString("HH.mm.ss")</td>

        </tr>
    }


</table>